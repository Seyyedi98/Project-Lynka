generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum purchaseType {
  subscription
  refund
}

model User {
  id                      String                 @id @default(cuid())
  phoneNumber             String?                @unique
  name                    String?
  email                   String?                @unique
  emailVerified           DateTime?              @map("email_verified")
  image                   String?
  password                String?
  createdAt               DateTime               @default(now())
  updatedAt               DateTime               @updatedAt
  page                    Page[]
  isTwoFactorEnabled      Boolean                @default(false)
  twoFactorConfirmation   twoFactorConfirmation?
  role                    UserRole               @default(USER)
  subscriptionPlan        String                 @default("bronze")
  subscriptionExpire      DateTime?
  accounts                Account[]
  twofactorConfiramtionId String?
  Notification            Notification[]
  Ttransactions           Transactions[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model twoFactorConfirmation {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model OtpToken {
  id          String   @id @default(cuid())
  phoneNumber String
  token       String   @unique
  expires     DateTime

  @@unique([phoneNumber, token])
}

model Page {
  uri             String   @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  owner           String?
  loadingIcon     String?
  metaTitle       String?
  metaDescription String?  @db.VarChar(300)
  favicon         String?  @db.VarChar(300)
  metaImage       String?  @db.VarChar(300)
  content         String   @db.MediumText
  views           Int      @default(0)
  isPremium       Boolean  @default(false)
  theme           String?  @db.Text
  googleIndexed   Boolean  @default(false)

  User User? @relation(fields: [owner], references: [id], onDelete: Cascade)

  @@index([owner])
  @@index([uri])
}

model LinkView {
  id          String   @id @default(cuid())
  pageUri     String
  elementId   String
  elementName String
  clickedAt   DateTime @default(now())

  @@index([pageUri])
  @@index([clickedAt])
}

model FormSubmission {
  id                  String   @id @default(cuid())
  pageUri             String
  formName            String?
  formData            Json
  FormOccupiedTitle12 String?  @default("")
  createdAt           DateTime @default(now())

  @@index([pageUri])
  @@index([createdAt])
}

model Notification {
  id         String    @id @default(cuid())
  userId     String
  type       String // "system", "message", "alert", etc.
  title      String
  body       String?
  isRead     Boolean   @default(false)
  createdAt  DateTime  @default(now())
  readAt     DateTime?
  actionUrl  String?
  actionText String?   @default("")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

model PageReports {
  id         String    @id @default(cuid())
  uri        String
  createdAt  DateTime  @default(now())
  readAt     DateTime?
  reportText String    @db.VarChar(500)
}

model contactUsMessages {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())
  title     String
  message   String   @db.VarChar(500)
}

model blog {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  title       String
  description String?
  view        Int
  images      String   @db.VarChar(500)
  postData    String   @db.VarChar(10000)
}

model Transactions {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount      Float        @default(0.0)
  status      String       @default("pending") // "pending", "completed", "failed", "refunded"
  type        purchaseType
  requestDate DateTime     @default(now())
  processedAt DateTime?
  successDate DateTime?
  failureDate DateTime?
  refundDate  DateTime?

  @@index([userId])
}
